<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylings/follow.css" />

    <title>Follow</title>
  </head>
  <body>
    <header>
      <a href="/users/<%= user._id %>">
        <div class="header-top">
          <img
            class="previousPage"
            onclick=""
            src="/images/icons/leftArrow.png"
            alt="left arrow icon"
          />
          <h1 class="pageName"><%= pageName %></h1>
        </div></a
      >
    </header>

    <main>
      <% if (followingList.length > 0) { %>
      <div class="user-list">
        <% followingList.forEach(user => { %>
        <div class="user-item">
          <a href="/users/<%= user._id %>" class="user-link">
            <div class="user-content">
              <img src="<%= user.photo %>" alt="<%= user.displayName %>" />
              <div class="user-text">
                <h3><%= user.displayName %></h3>
                <p>@<%= user.username %></p>
              </div>
            </div>
          </a>
        </div>
        <% }); %>
      </div>
      <% } %> <% if (followersList.length > 0) { %>
      <div class="user-list">
        <% followersList.forEach(user => { %>
        <div class="user-item">
          <a href="/users/<%= user._id %>" class="user-link">
            <div class="user-content">
              <img src="<%= user.photo %>" alt="<%= user.displayName %>" />
              <div class="user-text">
                <h3><%= user.displayName %></h3>
                <p>@<%= user.username %></p>
              </div>
            </div>
          </a>
        </div>
        <% }); %>
      </div>
      <% } %>
    </main>
  </body>
</html>
